<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.mastercard.simplifyapp.AuthenticateActivity"
    android:id="@+id/authenticate_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/fingerprint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    <ImageView
        android:id="@+id/fingerprint_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_fp_40px"/>
    <ImageView
        android:id="@+id/fingerprint_icon_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="60dp"
        android:paddingTop="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_fingerprint_success"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/fingerprint_icon_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="60dp"
        android:paddingTop="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_fingerprint_error"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/fingerprint_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="60dp"
        android:paddingTop="60dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:indeterminate="true"/>


    <com.mastercard.simplifyapp.widgets.SimplifyTextView
        android:id="@+id/fingerprint_message"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp"
        android:text="@string/fingerprint_description"
        android:layout_below="@+id/fingerprint_icon"
         />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fingerprint_layout"
        android:layout_toEndOf="@+id/fingerprint_layout"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_centerInParent="true"
                android:src="@drawable/security_icon"/>
        </RelativeLayout>



        <ListView
            android:id="@+id/authenticate_options"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

        </ListView>

    </LinearLayout>
</RelativeLayout>

